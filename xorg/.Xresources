! Fonts
#define FONT           xft:Inconsolata:style=Regular:pixelsize=11
#define FONT_BOLD      xft:Inconsolata:style=Bold:pixelsize=11

! Colors
#include "/home/cloud/.colors/matte"

*background: #3B333D
*foreground: #F8F5E2

*font:          FONT
*boldFont:      FONT_BOLD

Xft.dpi: 120
Xft.antialias:  1
Xft.autohint:   0
Xft.hinting:    1
Xft.hintstyle:  hintslight
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

Xcursor.theme:  default
